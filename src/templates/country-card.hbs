{{#each this}}
<div class="card">
    <div class="card-img">
        <img src="{{flag}}" alt="{{name}}">
    </div>
    <div class="card-body">
        <h2 class="card-title">{{name}}</h2>
        <p class="card-text"><span class="card-text-pre">Capital:</span> {{capital}}</p>
        <p class="card-text"><span class="card-text-pre">Population:</span> {{population}}</p>

        <p class="card-text"><b>Languages:</b></p>
        <ul class="list-group"></ul>
        {{#each languages}}
        <li class="list-group-item">{{name}}</li>
        {{/each}}
        </ul>
    </div>
</div>
{{/each}}